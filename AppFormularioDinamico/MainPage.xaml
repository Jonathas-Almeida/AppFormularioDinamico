<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppFormularioDinamico.MainPage"
             xmlns:local="clr-namespace:AppFormularioDinamico"
             Title="Formulário Dinâmico">

    <ScrollView>
        <VerticalStackLayout
            x:Name="DynamicFormLayout"
            Padding="20"
            Spacing="10">

            <Button Text="Enviar Formulário"
                    Clicked="OnSubmitButtonClicked"
                    Margin="0,20,0,0"
                    BackgroundColor="Green"
                    TextColor="White"
                    CornerRadius="8"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>